<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/popupbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteColor"
        android:gravity="center"
        android:textSize="@dimen/_13sdp"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/weight_popupheader"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weight_goal"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/whiteColor"/>
        <EditText
            android:id="@+id/et_select_weight_managment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@null"
            android:focusable="false"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_11sdp"
            android:hint="@string/select_weight_goal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/whiteColor"/>
        <ListView
            android:id="@+id/weight_choice_list"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="gone">
        </ListView>
        <LinearLayout
            android:id="@+id/ll_user_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_selection"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/whiteColor"/>
            <EditText
                android:id="@+id/et_select_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@null"
                android:focusable="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_11sdp"
                android:hint="@string/select_input_choice"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/whiteColor"/>

        </LinearLayout>
        <ListView
            android:id="@+id/lv_userselection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
        </ListView>


    <Button
        android:id="@+id/btn_weightsave"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/login_submit_rounded_corner"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Save"/>
    </LinearLayout>

</LinearLayout>