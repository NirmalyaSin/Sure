<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ractangle_white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_14sdp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="@dimen/_12sdp"
            android:textColor="@color/colorBlack" />

        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_14sdp"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:background="@drawable/red_rounded_corner_delete_button_background"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_weight"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_14sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Profile Complete Status:"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_profile_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Complete" />
        </LinearLayout>
    </RelativeLayout>


    <!--<ImageView
        android:id="@+id/iv_separature"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_below="@+id/ll_status"
        android:src="@drawable/stripe" />-->
</RelativeLayout>