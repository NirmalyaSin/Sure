<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    tools:context=".screens.notifications.NotificationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@null"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rlMessageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/shape_rectangle_round_white">

            <TextView
                android:id="@+id/textMessageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="Message Left"
                android:textColor="@color/registration_color_black"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/textDateTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textMessageLeft"
                android:layout_toEndOf="@+id/textMessageLeft"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="Time"
                android:textColor="@color/registration_color_black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlMessageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/shape_rectangle_round_green">

            <TextView
                android:id="@+id/texMessageRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="Message Right"
                android:textColor="@color/registration_color_black"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/textDateTimeRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texMessageRight"
                android:layout_toEndOf="@+id/texMessageRight"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="Time"
                android:textColor="@color/registration_color_black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>