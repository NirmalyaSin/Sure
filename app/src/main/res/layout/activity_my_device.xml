<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.forgotpassword.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@drawable/splash_image" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="Please scan the code on the buttom of the scale or enter the code manually"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tv_scale_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="Scale Id"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scale_id"
            android:paddingLeft="@dimen/_18sdp"
            android:paddingTop="@dimen/_20sdp"
            android:text="Scale ID"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@drawable/edit_text_background">

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter your scale ID"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="@dimen/_6sdp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/hintColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/rl_email"
            android:layout_margin="@dimen/_44sdp"
            android:background="@drawable/login_submit_rounded_corner"
            android:text="UPDATE"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>