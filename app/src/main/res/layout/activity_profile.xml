                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_DOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Age"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_DOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Age"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Height"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select Height"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_country_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Country Name"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_countryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_country_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select Country Name"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_address_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Address Line 1"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_addressLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_add_line1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Enter your address line 1"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_address_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Address Line 2"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_addressLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_add_line2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Enter your address line 2"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="City"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Enter your city name"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="State"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select your state"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_zip_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Zip Code"
