<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    tools:context=".screens.notifications.NotificationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@null"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/rlMessageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/blue_arrow_new" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/shape_rectangle_round_green">

                <TextView
                    android:id="@+id/textMessageLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_1sdp"
                    android:text="Message Left"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/textDateTimeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_1sdp"
                    android:text="Time"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rlMessageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_15sdp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/shape_rectangle_round_white">

                <TextView
                    android:id="@+id/texMessageRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_1sdp"
                    android:text="Message Right"
                    android:textColor="@color/registration_color_black"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/textDateTimeRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_1sdp"
                    android:text="Time"
                    android:textColor="@color/registration_color_black"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/white_arrow_new" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>