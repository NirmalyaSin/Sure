    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_frist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:text="Full Name "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_fristname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Enter Full Name"
                    android:inputType="text|textCapSentences"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Email Id"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Enter Email Id"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Phone Number"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Enter Phone Number"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Preffered Units"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Select Preffered unit"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Gender"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Select Gender"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_DOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="DOB"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Select DOB"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Height"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Select Height"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Desired Weight"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Desired Weight"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_time_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="Time To Lose Weight "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <RelativeLayout
                android:id="@+id/rl_time_loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/edit_text_background">

                <EditText
                    android:id="@+id/et_time_loss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Enter Lose Weight Time"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/hintColor"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_60sdp"
                android:background="@drawable/login_submit_rounded_corner"
                android:text="Add User"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
