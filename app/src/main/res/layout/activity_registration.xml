<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.registration.RegistrationActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/statusBarColor">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/back"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Registration"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@drawable/splash_image" />

        <ScrollView
            android:id="@+id/sv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/fl_profile_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerInParent="true">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/prof_img_placeholder"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="0dp" />

                        <ImageView
                            android:id="@+id/iv_plus_add_image"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/camera_icon_updated" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="@dimen/_9sdp"
                    android:paddingBottom="@dimen/_40sdp"
                    android:text="Upload Image"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tv_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:text="Full Name "
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_full"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Full Name"
                        android:inputType="text|textCapSentences"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Email Id"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Email Id"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Password"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Phone Number"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Phone Number"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Scale Id"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_scale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_scale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter your scale id"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Preffered Units"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select Preffered unit"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Gender"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select Gender"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_DOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="DOB"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_DOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select DOB"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Height"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Select Height"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Desired Weight"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Desired Weight"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_time_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="Time To Lose Weight "
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:id="@+id/rl_time_loss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/et_time_loss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="Enter Lose Weight Time"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_44sdp"
                    android:background="@drawable/login_submit_rounded_corner"
                    android:text="REGISTER"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>