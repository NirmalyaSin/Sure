<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.6"
    android:background="#000000"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/statusBarColor"
        >

        <TextView
            android:id="@+id/tv_adduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:layout_centerInParent="true"

            />
        <ImageView
            android:id="@+id/iv_cross_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:padding="@dimen/_20sdp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_frist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:text="First Name "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star16"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_fristname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@drawable/edit_text_background">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter First Name"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:paddingBottom="@dimen/_6sdp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/hintColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_20sdp"
            >

            <TextView
                android:id="@+id/tv_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:text="Middle Name "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@drawable/edit_text_background">

            <EditText
                android:id="@+id/et_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Middle Name"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:paddingBottom="@dimen/_6sdp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/hintColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_20sdp"
            >
            <TextView
                android:id="@+id/tv_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:text="Last Name "
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star16"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@drawable/edit_text_background">

            <EditText
                android:id="@+id/et_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Last Name"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:paddingBottom="@dimen/_6sdp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/hintColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_20sdp"
            >

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:text="Email Id"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_14sdp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star16"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@drawable/edit_text_background">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Email Id"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="@dimen/_6sdp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/hintColor"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cb_terms_condi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:button="@drawable/checkbox_selector"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_terms_condition"
                android:textColor="@color/whiteColor"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/login_submit_rounded_corner"
            android:text="Add User"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_15sdp"
            />


    </LinearLayout>


</LinearLayout>
