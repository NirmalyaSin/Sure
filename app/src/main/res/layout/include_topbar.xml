<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/statusBarColor">

        <RelativeLayout
            android:id="@+id/rl_menu"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/img_topbar_menu"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/menu" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@+id/rl_menu"
            android:background="@drawable/login_submit_rounded_corner"
            android:text="Done"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/tv_universal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DashBoard"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_toLeftOf="@+id/iv_edit"
            android:layout_toRightOf="@+id/tv_universal_header"
            android:background="@drawable/login_submit_rounded_corner"
            android:text="Add"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/edit_icon" />

        <ImageView
            android:id="@+id/iv_AddPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_add_plus" />

    </RelativeLayout>

</RelativeLayout>