<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_image"
    android:alpha="0.6"
    tools:context=".login.LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/statusBarColor"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/whiteColor"
            android:text="Skip"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Configuration"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/whiteColor"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_config"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/whiteColor"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/editSSID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusableInTouchMode="false"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter your WiFi-Name"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_wifi"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="gone"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/editBSSID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter your BSSID"
                        android:inputType="text|textNoSuggestions"
                        android:maxLines="1"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Password"
                        android:drawableLeft="@drawable/ic_lock_open"
                        android:inputType="textPassword"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/iv_showPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_invisible"/>

                    <ImageView
                        android:id="@+id/iv_hidePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_visible"
                        android:visibility="gone"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnConfigure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:background="@drawable/login_submit_rounded_corner"
                    android:text="Configure"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>